    [sndReq13] c13=0 -> 0.999:(c13'=2) + 0.001:(c13'=0);
    [deliverReq13] c13=2 -> (c13'=0);

    [sndGranted13] c13=0 -> 0.999:(c13'=1) + 0.001:(c13'=0);
    [deliverGranted13] c13=1 -> (c13'=0);

    [expire1] c13=2 -> (c13'=0);
    [expire1] c13!=2 -> true;

    [expire3] c13=1 -> (c13'=0);
    [expire3] c13!=1 -> true;
endmodule

