module channel12

    c12 : [0..9] init 0;

    [sndReq12] c12=0 -> 0.999:(c12'=2) + 0.001:(c12'=0);
    [deliverReq12] c12=2 -> (c12'=0);

    [expire1] c12=2 -> (c12'=0);
    [expire1] c12!=2 -> true;
endmodule


